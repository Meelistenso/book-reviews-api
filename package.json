{
  "name": "book-reviews-api",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "nest build",
    "format": "prettier --write \"services/**/*.ts\" \"libraries/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,services,libraries,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "docker-compose --project-directory ./e2e up e2e",
    "seed": "ts-node -r tsconfig-paths/register libraries/common/src/database/seed.ts"
  },
  "dependencies": {
    "@google-cloud/storage": "^7.9.0",
    "@google-cloud/trace-agent": "^8.0.0",
    "@nestjs-modules/ioredis": "^2.0.2",
    "@nestjs/common": "^10.3.8",
    "@nestjs/config": "^3.2.2",
    "@nestjs/core": "^10.3.8",
    "@nestjs/mapped-types": "*",
    "@nestjs/microservices": "^10.3.8",
    "@nestjs/platform-express": "^10.3.8",
    "@nestjs/typeorm": "^10.0.2",
    "bull": "^4.12.2",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.0",
    "cookie-parser": "^1.4.6",
    "csv-parser": "^3.0.0",
    "express": "^4.18.2",
    "faker": "^5.5.3",
    "ioredis": "^5.4.1",
    "joi": "^17.11.0",
    "kafkajs": "^2.2.4",
    "nestjs-pino": "^3.5.0",
    "passport-google-oauth20": "^2.0.0",
    "pg": "^8.11.3",
    "pino-http": "^8.5.0",
    "pino-pretty": "^10.2.3",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^5.0.5",
    "rxjs": "^7.8.1",
    "scramjet": "^4.37.0",
    "semver": "^7.6.0",
    "typeorm": "^0.3.20"
  },
  "devDependencies": {
    "@nestjs/cli": "^10.1.18",
    "@nestjs/schematics": "^10.0.2",
    "@nestjs/testing": "^10.2.7",
    "@types/cookie-parser": "^1.4.4",
    "@types/express": "^4.17.19",
    "@types/faker": "^6.6.9",
    "@types/jest": "29.5.5",
    "@types/node": "^20.8.6",
    "@types/passport-google-oauth20": "^2.0.14",
    "@types/supertest": "^2.0.14",
    "@typescript-eslint/eslint-plugin": "^6.8.0",
    "@typescript-eslint/parser": "^6.8.0",
    "eslint": "^8.51.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.1",
    "jest": "29.7.0",
    "prettier": "^3.0.3",
    "source-map-support": "^0.5.21",
    "supertest": "^7.0.0",
    "ts-jest": "29.1.1",
    "ts-loader": "^9.5.0",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.2.2"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": ".",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "./coverage",
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/libraries/",
      "<rootDir>/services/"
    ],
    "moduleNameMapper": {
      "^@app/common(|/.*)$": "<rootDir>/libraries/common/src/$1",
      "^libraries(|/.*)$": "<rootDir>/libraries/$1",
      "^services(|/.*)$": "<rootDir>/services/$1",
      "^@app/repositories(|/.*)$": "<rootDir>/libraries/repositories/src/$1"
    }
  }
}
